<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../cssTaboas.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="56.0" prefWidth="600.0" style="-fx-background-color: #005bbd;"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox layoutY="5.0" prefHeight="46.0" prefWidth="600.0" AnchorPane.bottomAnchor="5.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
            <HBox alignment="CENTER" prefHeight="46.0" prefWidth="326.0">
                <Label alignment="CENTER" prefHeight="46.0" prefWidth="351.0"
                       text="Administración de Actividades" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="43.0" fitWidth="87.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../imaxes/actividades.png"/>
                </ImageView>
                <ImageView fitHeight="26.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../imaxes/editar.png"/>
                </ImageView>
            </HBox>
        </VBox>
    </AnchorPane>
    <AnchorPane layoutY="56.0" prefHeight="345.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="56.0">
        <VBox layoutX="25.0" layoutY="20.0" prefHeight="305.0" prefWidth="550.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="0.0">
            <HBox prefHeight="60.0" prefWidth="550.0" VBox.vgrow="NEVER">
                <VBox prefHeight="50.0" prefWidth="275.0" HBox.hgrow="ALWAYS">
                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                        <children>
                            <Label prefHeight="20.0" prefWidth="54.0" text="Nome" HBox.hgrow="ALWAYS">
                                <font>
                                    <Font name="System Bold" size="14.0"/>
                                </font>
                            </Label>
                            <TextField fx:id="campoNome" prefHeight="26.0" prefWidth="207.0"
                                       promptText="Introduce nome a buscar..." HBox.hgrow="ALWAYS"/>
                        </children>
                    </HBox>
                </VBox>
                <VBox prefHeight="50.0" prefWidth="275.0" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0"
                              VBox.vgrow="ALWAYS">
                            <children>
                                <VBox alignment="CENTER" prefHeight="60.0" prefWidth="100.0"
                                      HBox.hgrow="ALWAYS">
                                    <children>
                                        <Button fx:id="btnBuscar" mnemonicParsing="false"
                                                onAction="#btnBuscarAction" prefHeight="26.0"
                                                prefWidth="95.0" text="Buscar"/>
                                    </children>
                                </VBox>
                                <VBox alignment="CENTER" prefHeight="60.0" prefWidth="92.0"
                                      HBox.hgrow="ALWAYS">
                                    <children>
                                        <Button fx:id="btnBuscar1" layoutX="40.0" layoutY="27.0"
                                                mnemonicParsing="false" onAction="#btnLimparAction"
                                                prefHeight="26.0" prefWidth="95.0" text="Limpar"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </HBox>
            <HBox prefHeight="192.0" prefWidth="550.0" VBox.vgrow="ALWAYS">
                <children>
                    <TableView fx:id="taboaActividade" onMouseClicked="#listenerTabla" prefHeight="160.0"
                               prefWidth="551.0" HBox.hgrow="ALWAYS">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="550.0" spacing="10.0"
                  VBox.vgrow="NEVER">
                <children>
                    <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Button fx:id="btnXestionar1" alignment="CENTER" mnemonicParsing="false"
                                    onAction="#btnCancelarAction" prefHeight="26.0" prefWidth="185.0"
                                    text="Cancelar Actividade"/>
                        </children>
                    </VBox>
                    <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Button fx:id="btnXerarInforme" alignment="CENTER" mnemonicParsing="false"
                                    onAction="#btnInformeAction" prefHeight="26.0" prefWidth="185.0"
                                    text="Xerar Informe"/>
                        </children>
                    </VBox>
                    <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Button fx:id="btnXestionar" alignment="CENTER" mnemonicParsing="false"
                                    onAction="#btnXestionarAction" prefHeight="26.0" prefWidth="185.0"
                                    text="Xestionar Selección"/>
                        </children>
                    </VBox>
                </children>
            </HBox>
        </VBox>
    </AnchorPane>
</AnchorPane>
