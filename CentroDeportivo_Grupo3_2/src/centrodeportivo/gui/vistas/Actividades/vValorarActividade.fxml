<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../cssTaboas.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="56.0" prefWidth="600.0" style="-fx-background-color: #005bbd;" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox layoutY="5.0" prefHeight="46.0" prefWidth="600.0" AnchorPane.bottomAnchor="5.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
            <HBox alignment="CENTER" prefHeight="46.0" prefWidth="326.0">
                <Label alignment="CENTER" prefHeight="46.0" prefWidth="258.0" text="Valora as actividades"
                       textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="43.0" fitWidth="87.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../imaxes/actividades.png"/>
                </ImageView>
            </HBox>
        </VBox>
    </AnchorPane>
    <AnchorPane layoutY="56.0" prefHeight="345.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="56.0">
        <VBox layoutX="25.0" layoutY="20.0" prefHeight="305.0" prefWidth="550.0" AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="0.0">
            <HBox prefHeight="60.0" prefWidth="550.0" VBox.vgrow="NEVER">
                <HBox alignment="CENTER" prefHeight="60.0" prefWidth="1123.0" spacing="10.0">
                    <Label prefHeight="20.0" prefWidth="70.0" text="Nome" HBox.hgrow="ALWAYS">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="campoNome" prefHeight="26.0" prefWidth="138.0"
                               promptText="Introduce nome a buscar..." HBox.hgrow="ALWAYS"/>
                    <ComboBox fx:id="comboInstalacion" prefHeight="26.0" prefWidth="149.0"/>
                    <ComboBox fx:id="comboArea" prefHeight="26.0" prefWidth="145.0"/>
                    <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#btnBuscarAction" prefHeight="26.0"
                            prefWidth="109.0" text="Buscar" HBox.hgrow="ALWAYS"/>
                </HBox>
            </HBox>
            <HBox prefHeight="192.0" prefWidth="550.0" spacing="10.0" VBox.vgrow="ALWAYS">
                <TableView fx:id="taboaActividade" prefHeight="248.0" prefWidth="551.0" HBox.hgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </HBox>
        </VBox>
    </AnchorPane>
</AnchorPane>
