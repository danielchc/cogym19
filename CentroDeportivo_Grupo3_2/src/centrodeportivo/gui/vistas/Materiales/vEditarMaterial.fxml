<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="56.0" prefWidth="600.0" style="-fx-background-color: #005bbd;" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox layoutY="5.0" prefHeight="46.0" prefWidth="600.0" AnchorPane.bottomAnchor="5.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
            <HBox alignment="CENTER" prefHeight="46.0" prefWidth="326.0">
                <Label alignment="CENTER" prefHeight="46.0" prefWidth="324.0" text="Administración de Materiais"
                       textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="43.0" fitWidth="87.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../imaxes/material.png"/>
                </ImageView>
            </HBox>
        </VBox>
    </AnchorPane>
    <AnchorPane layoutY="56.0" prefHeight="345.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="56.0">
        <VBox layoutX="25.0" layoutY="23.0" prefHeight="298.0" prefWidth="550.0" AnchorPane.bottomAnchor="23.0"
              AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="23.0">
            <HBox alignment="TOP_CENTER" prefHeight="35.0" prefWidth="550.0" VBox.vgrow="ALWAYS">
                <Label alignment="CENTER" text="Editar información do material" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Label>
            </HBox>
            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="550.0" spacing="10.0">
                <Label prefHeight="18.0" prefWidth="71.0" text="Código:">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="campoCodigo" disable="true" alignment="CENTER" prefHeight="26.0" prefWidth="65.0"/>
                <Label prefHeight="18.0" prefWidth="142.0" text="Tipo de material: ">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="comboTipoMaterial" prefHeight="26.0" prefWidth="242.0"/>
            </HBox>

            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="550.0" spacing="10.0">
                <Label prefHeight="18.0" prefWidth="73.0" text="Estado: ">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="campoEstadoMaterial" prefHeight="26.0" prefWidth="469.0"/>
            </HBox>

            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="550.0" spacing="10.0">
                <Label prefHeight="18.0" prefWidth="112.0" text="Instalación: ">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="comboInstalacion" prefHeight="26.0" prefWidth="215.0"/>
                <Label prefHeight="18.0" prefWidth="60.0" text="Área: ">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="comboArea" prefHeight="26.0" prefWidth="169.0"/>
            </HBox>

            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="550.0" spacing="10.0">
                <Label prefHeight="18.0" prefWidth="186.0" text="Data da compra:">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <DatePicker fx:id="campoDataCompraMaterial" prefHeight="26.0" prefWidth="174.0"
                            promptText="DD/MM/AAAA"/>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="96.0" text="Prezo:">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="campoPrezoMaterial" alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="99.0"
                           promptText="00.00"/>
                <Label text="€">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
            </HBox>

            <HBox alignment="CENTER" prefHeight="42.0" prefWidth="342.0">
                <Label fx:id="avisoCampos" alignment="CENTER" prefHeight="65.0" prefWidth="342.0"
                       text="Campos Obrigatorios *!!!" textFill="RED" visible="false">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
            </HBox>

            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="550.0" spacing="10.0" VBox.vgrow="NEVER">
                <Label alignment="CENTER" prefHeight="30.0" prefWidth="148.0" text="Outras xestións">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
            </HBox>

            <HBox prefWidth="643.0" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" prefWidth="275.0" VBox.vgrow="ALWAYS">
                    <Button fx:id="btnVolver" mnemonicParsing="false" prefHeight="26.0" prefWidth="160.0"
                            text="Volver" onAction="#btnVolverAction"/>
                </HBox>
                <HBox alignment="CENTER" prefHeight="10.0" prefWidth="275.0" VBox.vgrow="ALWAYS">
                    <Button fx:id="btnModificar" mnemonicParsing="false" prefHeight="26.0" prefWidth="160.0"
                            text="Modificar" HBox.hgrow="ALWAYS" onAction="#btnModificarAction"/>
                </HBox>
                <HBox alignment="CENTER_RIGHT" prefHeight="10.0" prefWidth="275.0" VBox.vgrow="ALWAYS">
                    <Button fx:id="btnBorrar" mnemonicParsing="false" prefHeight="26.0" prefWidth="160.0"
                            text="Borrar Material" onAction="#btnBorrarAction"/>
                </HBox>
            </HBox>
        </VBox>
    </AnchorPane>
</AnchorPane>
