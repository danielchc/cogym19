<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="56.0" prefWidth="600.0" style="-fx-background-color: #005bbd;" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox layoutY="5.0" prefHeight="46.0" prefWidth="600.0" AnchorPane.bottomAnchor="5.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
            <HBox alignment="CENTER" prefHeight="46.0" prefWidth="326.0">
                <Label alignment="CENTER" prefHeight="46.0" prefWidth="166.0" text="Novo material" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="43.0" fitWidth="87.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../imaxes/material.png"/>
                </ImageView>
            </HBox>
        </VBox>
    </AnchorPane>
    <AnchorPane layoutY="56.0" prefHeight="345.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="56.0">
        <VBox alignment="TOP_CENTER" layoutX="25.0" layoutY="23.0" prefHeight="298.0" prefWidth="550.0"
              AnchorPane.bottomAnchor="23.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0"
              AnchorPane.topAnchor="23.0">
            <HBox alignment="TOP_CENTER" prefWidth="550.0" VBox.vgrow="ALWAYS">
                <Label alignment="TOP_CENTER" prefHeight="26.0" prefWidth="166.0" text="Tipo de material: *">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="comboTipo" prefHeight="18.0" prefWidth="174.0"/>
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER" prefWidth="550.0" VBox.vgrow="ALWAYS">
                <Label alignment="TOP_CENTER" prefHeight="26.0" prefWidth="166.0" text="Estado: *">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="campoEstadoMaterial" prefHeight="18.0" prefWidth="174.0"
                           promptText="Estado do material..."/>
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER" prefWidth="550.0" VBox.vgrow="ALWAYS">
                <VBox prefHeight="50.0" prefWidth="275.0" HBox.hgrow="ALWAYS">
                    <HBox alignment="TOP_CENTER" prefWidth="550.0" VBox.vgrow="ALWAYS">
                        <Label alignment="TOP_CENTER" prefHeight="26.0" prefWidth="166.0" text="Instalación: *">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="comboInstalacion" prefHeight="18.0"
                                  prefWidth="174.0"/>
                    </HBox>
                    <HBox alignment="TOP_CENTER" prefWidth="550.0" VBox.vgrow="ALWAYS">

                        <Label alignment="TOP_CENTER" prefHeight="26.0" prefWidth="180.0" text="Data da compra: ">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <DatePicker fx:id="campoDataCompraMaterial" prefHeight="18.0" prefWidth="200.0"
                                    promptText="DD/MM/AAAA"/>
                    </HBox>
                </VBox>
                <VBox prefHeight="50.0" prefWidth="275.0" HBox.hgrow="ALWAYS">

                    <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="550.0" VBox.vgrow="ALWAYS">
                        <Label alignment="CENTER" prefHeight="26.0" prefWidth="166.0" text="Área: *"
                               styleClass="estilo-label">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="comboArea" prefHeight="18.0" prefWidth="174.0"/>
                    </HBox>
                    <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="550.0" VBox.vgrow="ALWAYS">
                        <Label alignment="CENTER" prefHeight="26.0" prefWidth="166.0" text="Prezo: ">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="campoPrezoMaterial" alignment="CENTER" prefHeight="18.0" prefWidth="125.0"
                                   promptText="00.00"/>
                        <Label prefHeight="26.0" prefWidth="166.0" text="€">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </HBox>
                </VBox>
            </HBox>
            <HBox alignment="CENTER">
                <Button fx:id="btnGardarMaterial" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        prefHeight="26.0" prefWidth="160.0" text="Gardar"/>
            </HBox>
            <HBox alignment="CENTER">
                <Button fx:id="btnLimparMaterial" mnemonicParsing="false" prefHeight="26.0"
                        prefWidth="160.0" text="Limpar campos"/>
            </HBox>
        </VBox>
    </AnchorPane>
</AnchorPane>
